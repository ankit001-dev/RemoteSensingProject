
@{
    ViewBag.Title = "Expense_Report";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<style>
    .link-icon {
        height: 16px;
    }
</style>
<style>
    .progress-bar {
        width: 100% !important;
        background-color: #f3f3f3 !important;
        border-radius: 5px !important;
        height: 20px !important;
    }

    .progress {
        height: 100% !important;
        width: 70%;
        background-color: #4caf50 !important;
        border-radius: 5px !important;
        text-align: center !important;
        line-height: 20px !important; /* Aligns text in the middle */
        color: white !important;
        justify-content: center;
    }
    
    .dt-search{
        float:right;
        margin-bottom:5px !important;
    }
</style>
<div class="search-box p-4 bg-white rounded mb-3 box-shadow">
    <form class="forms-sample">
        <div class="row align-items-center">
            <div class="col-lg-2">
                <h5>Expense Report</h5>
            </div>
            @*<div class="col-lg-4 col-md-6">
                    <input type="text" placeholder="Search by project name" class="form-control">
                </div>*@
            <div class="col-lg-6 col-md-6">
                <select id="projectName" class="form-select form-select-lg">
                    <option>--Select Project--</option>
                    @if (ViewBag.ProjectList != null)
                    {
                        if (ViewBag.ProjectList.Count > 0)
                        {
                            foreach (var item in ViewBag.ProjectList)
                            {
                                <option value="@item.Id">@item.ProjectTitle</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-lg-4 col-md-6 ">
                <select class="form-select form-select-lg expenses" id="expenseDropdown">
                    <option selected>--Select head--</option>
                    @*<option value="1">Project Expenses</option>
                        <option value="2">Equipment Expenses</option>
                        <option value="3">Miscellaneous Expenses</option>*@
                </select>
            </div>
        </div>
    </form>
</div>
<div class="row" id="expenseDetails" hidden>
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex">
                    <a id="excelDownloadBtn" href="/admin/DownloadExpencesReport?type=excel"><button class="btn btn-success">Excel</button></a>
                    <a id="pdfDownloadBtn" href="/admin/DownloadExpencesReport?type=pdf"><button class="btn btn-danger">Pdf</button></a>
                </div>
                <div class="table-responsive">
                    <table id="ExpenceTable">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Attachment</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!----Dynamic Data-->
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#ExpenceTable").DataTable();

        $('#expenseDropdown').change(function () {
            var selectedValue = $(this).val();
            var expenseDetailsDiv = $('#expenseDetails');
            const projectId = $('#projectName').val();
            updateDownloadLinks();
            if (selectedValue) {
                expenseDetailsDiv.removeAttr('hidden');
                getExpenses(selectedValue, projectId);
            } else {
                expenseDetailsDiv.attr('hidden', true);
            }
        });


    })

    function updateDownloadLinks() {
        const projectId = $('#projectName').val() || '';
        const headId = $('#expenseDropdown').val() || '';

        const queryString =
            `&projectId=${encodeURIComponent(projectId)}` +
            `&headId=${encodeURIComponent(headId)}`; 

        $("#excelDownloadBtn").attr(
            "href",
            `/admin/DownloadExpencesReport?type=excel${queryString}`
        );

        $("#pdfDownloadBtn").attr(
            "href",
            `/admin/DownloadExpencesReport?type=pdf${queryString}`
        );
    }

    let isApplyDataTable = false;
    function getExpenses(hId, pId) {
        $.ajax({
            url: "/Admin/GetExpenses",
            type: "GET",
            data: { hId: hId, pId: pId },
            success: function (res) {
                const $table = $("#ExpenceTable");
                const $tbody = $table.find("tbody");


                if ($.fn.DataTable.isDataTable($table)) {
                    $table.DataTable().destroy();
                }

                // Clear the table body
                $tbody.empty();

                // Check if data exists
                if (res.list && res.list.length > 0) {
                    $.each(res.list, function (index, item) {
                        const row = `
                    <tr>
                        <td>${index + 1}</td>
                        <td>${item.DateString}</td>
                        <td>${item.title}</td>
                        <td>${item.description}</td>
                        <td>${item.amount}</td>
                        <td><a href="${item.attatchment_url}" target="_blank" title="View Attachment">View</a></td>
                    </tr>`;
                        $tbody.append(row);
                    });
                } 
            },
            error: function (xhr) {
                console.error("Error:", xhr.responseText);
                Swal.fire({
                    title: "Error",
                    text: "An error occurred while fetching the expenses.",
                    icon: "error"
                });
            }
        });
    }
</script>

<script>
    $(document).ready(function () {
        $("#projectName").on("change", function () {
            const projectId = $(this).val();

            $.ajax({
                url: "/Admin/getHeadsByProject",
                type: "GET",
                data: { id: projectId },
                success: function (res) {
                    $(".expenses").empty();
                    console.log(res._headList)
                    $(".expenses").append('<option selected>--Select head--</option>');

                    $.each(res._headList, function (index, item) {
                        var row = `<option value="${item.Id}">${item.heads}</option>`;
                        $(".expenses").append(row);
                    });

                },
                error: function (xhr, error) {
                    console.log("An error occurred:", error);
                }
            });
        });
       
    });

</script>



