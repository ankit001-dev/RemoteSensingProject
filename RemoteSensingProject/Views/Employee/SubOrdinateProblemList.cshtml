
@{
    ViewBag.Title = "SubOrdinateProblemList";
    Layout = "~/Views/Shared/_employeeLayout.cshtml";
}

<style>
    .link-icon {
        height: 16px;
    }
</style>
<div class="search-box p-4 bg-white rounded mb-3 box-shadow">
    <form class="forms-sample">
        <div class="row align-items-center">
            <div class="col-lg-3">
                <h5>Assigned Project Lists</h5>
            </div>
            <div class="col-lg-8 col-md-6">
                <input type="text" id="searchByProjectName" name="searchByProjectName" placeholder="Search by project name" class="form-control">
            </div>
           
        </div>
    </form>
</div>
<div class="row mx-0">
    <div class="col-md-12 p-0 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="projectTable" class="dataTableExample" style="width:100%">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Project Name</th>
                                <th>Problem Date</th>
                                <th>Problem Title</th>
                                <th>Description</th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @{ int index = 1;}
                            @if (ViewBag.ProjectProblemList != null)
                            {
                                foreach (var problem in ViewBag.ProjectProblemList)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@problem.ProjectName</td>
                                        <td>@problem.CreatedDate</td>
                                        <td>@problem.Title</td>
                                        <td>@problem.Description</td>
                                        @*<td>
                                            <a href="#" class="completeTaskAction" data-probId="@problem.ProblemId">
                                                <i class="fa-solid fa-check text-success"></i>
                                            </a>

                                            &nbsp; | &nbsp;
                                            <a href="#" class="rejectTaskAction" data-probId="@problem.ProblemId">
                                                <i class="fa-solid fa-xmark text-danger"></i>
                                            </a>
                                        </td>*@
                                    </tr>
                                    index++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>

<div class="modal fade" id="rejectProblemIssue" tabindex="-1" aria-labelledby="rejectProblemIssueModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex">
                <h1 class="modal-title fs-5 text-success" id="rejectProblemIssueLabel">Incomplete Problem Solution</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="rejectProblemForm">
                    <label>Message :</label>
                    <textarea class="form-control form-control-sm" name="message" placeholder="Enter message..."></textarea>
                    <input type="hidden" name="probId" id="problemIdForForm"/>
                    <p class="text-center py-2">
                        <input type="submit" value="Submit" class="btn btn-primary"/>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#projectTable").DataTable();

        $('#searchByProjectName').on('keyup', function () {
            let table = $("#projectTable").DataTable();

            table.columns(1).search($(this).val()).draw();
        });
    })

    $(".completeTaskAction").click(function () {
        Swal.fire({
            title: "Please wait !",
            text: "Processing your request....",
            allowOutsideClick: false,
            allowEscapeKey: false,
            didOpen: () => {
                Swal.showLoading();
            }
        })

        let problemId = $(this).attr("data-probId");
        $.ajax({
            url: "/employee/updateProjectProblemStatus",
            type: "post",
            data: { problemId: problemId },
            success: function (res) {
                if (res.status) {
                    Swal.fire({
                        title: "Successfully !",
                        text: res.message,
                        icon: "success",
                        didClose: () => {
                            location.reload(true)
                        }
                    })
                }
                else {
                    Swal.fire({
                        title: "Sorry !",
                        text: res.message,
                        icon: "warning"

                    })
                }
            },
            error: function () {
                Swal.fire({
                    title: "Server busy !",
                    text: "Server is busy please try after sometime.",
                    icon: "error",
                    didClose: () => {
                        location.reload(true)
                    }

                })
            }
        })
    })


    $(".rejectTaskAction").click(function () {
        let problemId = $(this).attr("data-probId");
        $("#problemIdForForm").val(problemId);
        $("#rejectProblemIssue").modal("show")
    })


    $("#rejectProblemForm").on("submit", function (e) {
        e.preventDefault()
        Swal.fire({
            title: "Please wait !",
            text: "Processing your request....",
            allowOutsideClick: false,
            allowEscapeKey: false,
            didOpen: () => {
                Swal.showLoading();
            }
        })
        let formData = new FormData(this);
        $.ajax({
            url: "/employee/rejectProjectProblem",
            type: "post",
            data: formData,
            processData: false,
            contentType: false,
            success: function (res) {
                if (res.status) {
                    Swal.fire({
                        title: "Successfully !",
                        text: res.message,
                        icon: "success",
                        didClose: () => {
                            location.reload(true)
                        }
                    })
                }
                else {
                    Swal.fire({
                        title: "Sorry !",
                        text: res.message,
                        icon: "warning"

                    })
                }
            },
            error: function () {
                Swal.fire({
                    title: "Server busy !",
                    text: "Server is busy please try after sometime.",
                    icon: "error",
                    didClose: () => {
                        location.reload(true)
                    }

                })
            }
        })
    })
</script>
